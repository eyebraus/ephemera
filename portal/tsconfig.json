{
  "compilerOptions": {
    "incremental": true,
    "jsx": "preserve",
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": [
      "jest",
      "node"
    ]
  },
  "exclude": [
    "jest.config.ts",
    "node_modules",
    "test/**/*.ts",
    "test/**/*.tsx"
  ],
  "extends": "../tsconfig.base.json",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../portal/.next/types/**/*.ts",
    "../dist/portal/.next/types/**/*.ts",
    "next-env.d.ts"
  ]
}
